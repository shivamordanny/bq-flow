# BQ Flow - Environment Configuration
# Copy this file to .env and update with your values

# ============= REQUIRED VARIABLES =============
# These MUST be set for the application to work

# Google Cloud Project ID (REQUIRED)
# Example: my-gcp-project
PROJECT_ID=

# BigQuery Dataset ID (REQUIRED)
DATASET_ID=

# ============= AUTHENTICATION =============
# Choose one of these authentication methods:

# Option 1: Service Account Key (recommended for production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Option 2: Application Default Credentials (for local development)
# Run: gcloud auth application-default login

# ============= OPTIONAL VARIABLES =============
# These have defaults but can be overridden

# BigQuery location (default: US)
LOCATION=US

# Gemini connection name (default: us.gemini_connection)
GEMINI_CONNECTION=us.gemini_connection

# Dataset Configuration (Optional - defaults to PROJECT_ID/DATASET_ID)
METADATA_PROJECT=  # Defaults to PROJECT_ID if not set
METADATA_DATASET=  # Defaults to DATASET_ID if not set
EXECUTION_PROJECT=  # Defaults to PROJECT_ID if not set

# Tables Configuration
DATABASE_TABLE= # Table containing your database schema
EMBEDDING_JOBS_TABLE= # Table to track embedding jobs
VECTOR_INDEXES_TABLE= # Table to store vector indexes
QUERY_EMBEDDINGS= # Table to store query embeddings

# Model Configuration
EMBEDDING_MODEL=text-embedding-005
EMBEDDING_DIMS=768
GENERATION_MODEL=gemini-2.5-flash
GENERATION_TEMP=0.1
MAX_TOKENS=1000
INSIGHT_MODEL=gemini-2.5-flash
INSIGHT_TEMP=0.3

# Forecast Configuration
FORECAST_METHOD=AI.FORECAST
FORECAST_MODEL=TimesFM 2.0
FORECAST_HORIZON=30
FORECAST_CONFIDENCE=0.95

# Configuration File (optional - defaults to config/config.yaml)
CONFIG_FILE=config/config.yaml

# Logging Configuration
LOG_LEVEL=INFO

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
MAX_RESULTS=1000
VECTOR_SEARCH_TOP_K=15

# Security Configuration
USE_PARAMETERIZED_QUERIES=true
MAX_QUERY_LENGTH=10000